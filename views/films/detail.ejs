<%- include ('../layouts/header') %>
<body>
        <!-- nội dung -->
        <div class="detail-title">
            <div class="h5-detail">Nội dung phim</div>
            <span class="line-detail"></span>
            <div class="flex-detail">
                <div class="flex-img">
                    <div class="flex-title">
                        <a href="#">
                            <div class="flex-cs">
                                <div class="h6-poster"><%=film.nameEN%></div>
                                <div class="side-poster"><%=film.nameVN%></div>
                            </div>
                        </a>
                        <div class="cs">
                            <img class="img-cs" 
                            <% if (film.agelimit==18){%>
                                src="/img/cs18.png">
                            <%} else if (film.agelimit==16){%>
                                src="/img/cs16.png">
                            <%}else {%>
                                src="/img/cs13.png">
                            <%}%>
                        </div>

                    </div>
                    <div class="detail-noidung">
                        <div class="detail-left ">
                            <img class="detail-img" src="/img/films/<%=film._id%>/<%=film.photo%>">
                            <iframe width="560" height="315" src="https://www.youtube.com/embed/<%=film.trailerId%>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            <button type="button" class="btn btn-danger btn-buy">Mua vé</button>
                        </div>
                        <div class="detail-right">
                            <div class="detail-sub">
                                <div class="subin">
                                    <div class="sub1">Đạo diễn:</div>
                                    <div class="sub2"><%=film.director%></div>
                                </div>
                            </div>
                            <div class="detail-sub">
                                <div class="subin">
                                    <div class="sub1">Diễn viên:</div>
                                    <div class="sub2"><%=film.actor%></div>
                                </div>
                            </div>
                            <div class="detail-sub">
                                <div class="subin">
                                    <div class="sub1">Thể loại:</div>
                                    <div class="sub2">
                                        <%if (film.type=="action"){%>
                                            Hành động
                                        <%}else if (film.type=="honor"){%>
                                            Kinh dị
                                        <%}else if (film.type=="romance"){%>
                                            Tình cảm
                                        <%} else if (film.type=="humorous"){%>
                                            Hài hước
                                        <%}else if (film.type=="cartoon"){%>
                                            Hoạt hình
                                        <%}else {%>
                                            Lịch sử
                                        <%}%>
                                    </div>
                                </div>
                            </div>
                            <div class="detail-sub">
                                <div class="subin">
                                    <div class="sub1">Khởi chiếu:</div>
                                    <div class="sub2"><%=film.showdate%></div>
                                </div>
                            </div>
                            <div class="detail-sub">
                                <div class="subin">
                                    <div class="sub1">Thời lượng:</div>
                                    <div class="sub2"><%=film.time%></div>
                                </div>
                            </div>
                            <div class="detail-sub">
                                <div class="subin">
                                    <div class="sub1">Chi tiết:</div>
                                    <div class="sub2-chitiet"><%=film.detail%></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
</body>
<%- include ('../layouts/footer') %>