    <script>
        $('#dateShow').change(function(e){
            var value= $(this).val();
            var nameEN= $(this).attr('film');
            $.ajax({
                    url: "/film/loadTime",
                    method: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ value: value, nameEN: nameEN }),
                    success: function (result) {
                        $('#showtime').html(result.timeCode);
                     }
                })
        })

