<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>MEGAS CINEMA</title>
</head>
<!-- navbar -->

<body>
    <div class="wrapper">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav1">
            <div class="collapse navbar-collapse navnav" id="Mainnav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link " href="dangky.html">Đăng ký</a>
                    </li>
                    <div class="nav-cach"></div>
                    <li class="nav-item">
                        <a class="nav-link" href="login.html">Đăng nhập</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <!-- menu -->
    <div class="wrapper-index">
        <div class="menu-index" id="menu">
            <ul class="menu-ul">
                <li>
                    <a href="/"><img class="img-logo" src="/img/MEGAS (2).png" /></a>
                </li>
                <div class="dropdown">
                    <li class="li1"><a class="menu-a" href="index.html">PHIM</a>
                        <div class="noidung_dropdown">
                            <a href="#">Tất cả</a>
                            <a href="#">Phim sắp chiếu</a>
                            <a href="#">Phim đang chiếu</a>
                        </div>
                    </li>
                </div>
                <div class="dropdown">
                    <li><a class="menu-a" href="index.html">THỂ LOẠI</a>
                        <div class="noidung_dropdown">
                            <a href="/film/Kinh dị">Kinh dị</a>
                            <a href="/film/Tình cảm">Tình cảm</a>
                            <a href="/film/Hành động">Hành động</a>
                            <a href="/film/Hài hước">Hài hước</a>
                            <a href="/film/Hoạt hình">Hoạt hình</a>
                            <a href="/film/Lịch sử">Lịch sử</a>
                        </div>
                    </li>
                </div>
                <li><a class="menu-a" href="menu.html">MUA VÉ</a></li>
                <li><a class="menu-a" href="giohang.html">SỰ KIỆN</a></li>
                <li><a class="menu-a" href="giohang.html">HỖ TRỢ</a></li>
            </ul>
        </div>
        <!-- slide poster phim -->
        <div class="poster-index">
            <div id="owl-demo" class="owl-carousel owl-theme">
                <%filmslide.forEach(function(fi){%>
                    <a class="item-slide"><img class="poster-slide" src="/img/films/<%=fi._id%>/<%=fi.photo%>" alt="Owl Image"></a>
                <%})%>
                
            </div>
        </div>
    </div>
    <div class="theloai-body">
        <div class="h5-detail">Hành động</div>
        <span class="line-detail"></span>
        <div class="theloai-list">
            <a href="/film/Kinh dị">
                <div class="theloai-sub">Kinh dị</div>
            </a>
            <a href="/film/Tình cảm">
                <div class="theloai-sub">Tình cảm</div>
            </a>
            <a href="/film/Hành động">
                <div class="theloai-sub">Hành động</div>
            </a>
            <a href="/film/Hài hước">
                <div class="theloai-sub">Hài hước</div>
            </a>
            <a href="/film/Hoạt hình">
                <div class="theloai-sub">Hoạt hình</div>
            </a>
            <a href="/film/Lịch sử">
                <div class="theloai-sub">Lịch sử</div>
            </a>
        </div>
        <div class="theloai-movie">
            <div class="flex-poster-theloai">
                <%if (filmtype.length !=0){%>
                <%filmtype.forEach(function(fi){%>
                    <a class="item-slide" href="/film/detail/<%=fi.slug%>">
                        <div class="poster-movie-div" style="    width: 360px;">
    
                            <div class="ten-theloai"><%=fi.status%></div>
                            <img class="poster-movie" src="/img/films/<%=fi._id%>/<%=fi.photo%>">
    
                            <div class="movie-img">
                                <div class="h6-poster"><%=fi.nameEN%>
    
                                    <img class="img-cs" src="/img/cs<%=fi.agelimit%>.png">
    
                                </div>
                            </div>
                            <div class="side-poster"><%=fi.nameVN%></div>
                        </div>
                    </a>
                <%})%>
                <%} else {%>
                    <h1>Hiện tại chưa có phim nào</h1>
                <%}%>
                
                
            </div>
        </div>
</body>
<script src="/js/jquery-3.6.0.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/index.js"></script>
<script>
    $(document).ready(function () {

        $("#owl-demo").owlCarousel({

            autoPlay: 4000,

            items: 1,
            itemsDesktop: [1199, 3],
            itemsDesktopSmall: [979, 3]

        });

    });
</script>
<link rel="stylesheet" href="/css/owl.carousel.css">

<!-- Default Theme -->
<link rel="stylesheet" href="/css/owl.theme.css">

<!-- Include js plugin -->
<script src="/js/owl.carousel.js"></script>

</html>