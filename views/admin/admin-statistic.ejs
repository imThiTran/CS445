<script>
    $('.xemngay').click(function(){
        var month=$('.ipgetmonth').val();
        $.ajax({
                url:"/admin/statistic/day-in-month",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({month:month}),
                success: function(result){
                    var daysArr=[];
                    for (var i=1;i<=result.dayNumbers;i++){
                        daysArr.push(i+'/'+result.thisMonth);
                    }
                    
                        massPopChart.destroy();
                        massPopChart = new Chart(myChart, {
                                                        type: 'line', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
                                                        data: {
                                                            labels: daysArr,
                                                            datasets: [{
                                                                label: 'Doanh thu',
                                                                data: result.salesDay,
                                                                backgroundColor: [
                                                                    'rgb(254 199 88)',
                                                                ],
                                                            }]
                                                        },
                                                        options: {
                                                            title: {
                                                                display: true,
                                                                text: 'DOANH THU THÁNG '+result.thisMonth+'/'+result.thisYear,
                                                                fontSize: 25
                                                            },
                                                            legend: {
                                                                display: true,
                                                                position: 'right',
                                                                labels: {
                                                                    fontColor: '#000'
                                                                }
                                                            },
                                                            layout: {
                                                                padding: {
                                                                    left: 50,
                                                                    right: 0,
                                                                    bottom: 0,
                                                                    top: 0
                                                                }
                                                            },
                                                            tooltips: {
                                                                enabled: true
                                                            }
                                                        }
                                                    });
                      }
        })
    })

    $('.xemthang').click(function(){
        var year=$('.ipgetyear').val();
        $.ajax({
                url:"/admin/statistic/month-in-year",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({year:year}),
                success: function(result){
                        massPopChart1.destroy();
                        massPopChart1 = new Chart(myChart1, {
                                                        type: 'line', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
                                                        data: {
                                                            labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6',
                                                                'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                                                            datasets: [{
                                                                label: 'Doanh thu',
                                                                data: result.salesMonth,
                                                                backgroundColor: [
                                                                    'rgb(254 199 88)',
                                                                ],
                                                            }]
                                                        },
                                                        options: {
                                                            title: {
                                                                display: true,
                                                                text: 'DOANH THU NĂM '+result.thisYear,
                                                                fontSize: 25
                                                            },
                                                            legend: {
                                                                display: true,
                                                                position: 'right',
                                                                labels: {
                                                                    fontColor: '#000'
                                                                }
                                                            },
                                                            layout: {
                                                                padding: {
                                                                    left: 50,
                                                                    right: 0,
                                                                    bottom: 0,
                                                                    top: 0
                                                                }
                                                            },
                                                            tooltips: {
                                                                enabled: true
                                                            },
                                                        }
                                                    });
                      }
        })
    })
</script>

